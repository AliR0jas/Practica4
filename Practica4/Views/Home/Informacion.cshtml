@model Practica4.Models.InformacionViewModel
@{
    Layout = "_Layout";
}

<div id="principalVer">

    <div class="container">
        <img class="image1" src="~/images/banners/@(Model.Id)_b.jpg">
        <div class="overlay">
            <img class="image2" src="~/images/banners/@(Model.Id)_b.png">
        </div>

    </div>

    <div class="datosPelicula">
        <h1>@Model.Nombre</h1>
        <h2>
            @Model.NombreOriginal • @Model.FechaEstreno</h1>
            <p>
                @Model.Descripcion
            </p>


            <div class="personajes">
                <h2>Personajes</h2>
                @foreach (var persona in Model.InfoApariciones)
                {
                    <div>
                        <a>
                            <img src="~/images/personajes/@(persona.IdPersonaje).jpg" alt="@persona.IdPersonajeNavigation.Nombre">
                        </a>
                        <div class="nombrePelicula">
                            <p>@persona.IdPersonajeNavigation.Nombre</p>
                        </div>
                    </div>
                }

            </div>
    </div>
</div>